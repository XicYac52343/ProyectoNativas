<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/negro">

    <LinearLayout
        android:id="@+id/linearLayourHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <View
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:background="@color/gris" />

        <ImageView
            android:id="@+id/iv_productoDetalles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="0dp"
            android:background="@drawable/degradado_producto"
            app:srcCompat="@drawable/fragancia_urbe" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:background="@color/gris" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="3dp"
                app:srcCompat="@drawable/estrella" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="3dp"
                app:srcCompat="@drawable/estrella" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="3dp"
                app:srcCompat="@drawable/estrella" />

            <TextView
                android:id="@+id/tv_nombreProductoDetalles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/playfair_bold"
                android:text="@string/nombreProducto"
                android:textAlignment="center"
                android:textColor="@color/blanco"
                android:textSize="50sp"
                android:layout_marginHorizontal="5dp"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="3dp"
                app:srcCompat="@drawable/estrella" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="3dp"
                app:srcCompat="@drawable/estrella" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="3dp"
                app:srcCompat="@drawable/estrella" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_precioProductoDetalles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/playfair_display_bold"
            android:text="@string/precioProducto"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/dorado"
            android:textSize="50sp"
            android:layout_marginTop="-10dp"/>

        <TextView
            android:id="@+id/tv_descripcionProductoDetalles"
            android:layout_width="238dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/libre_baskerville"
            android:text="@string/descripcionProducto"
            android:textAlignment="center"
            android:textColor="@color/blanco"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="
">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/tv_estilo1ProductoDetalles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/libre_baskerville_bold"
                    android:text="@string/estiloProducto1"
                    android:textAlignment="center"
                    android:textColor="@color/blanco"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/iv_estilo1ProductoDetalles"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/amaderado_icono" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/libre_baskerville_bold"
                android:text="@string/estiloSeparador"
                android:textAlignment="center"
                android:textColor="@color/blanco"
                android:textSize="17sp"
                android:layout_marginHorizontal="5dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/tv_estilo2ProductoDetalles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/libre_baskerville_bold"
                    android:text="@string/estiloProducto2"
                    android:textAlignment="center"
                    android:textColor="@color/blanco"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/iv_estilo2ProductoDetalles"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/exclusivo_icono" />
            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:id="@+id/iv_favProductoDetalles"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/fav_blanco" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/bt_menosProducto"
                style="@style/btnprod"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/playfair_display_bold"
                android:padding="0dp"
                android:text="@string/menos"
                android:textSize="28dp"
                app:backgroundTint="@null" />

            <TextView
                android:id="@+id/tv_cantidadProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/libre_baskerville"
                android:text="@string/cantidadProducto"
                android:textColor="@color/blanco"
                android:textSize="20sp" />


            <Button
                android:id="@+id/bt_masProducto"
                style="@style/btnprod"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:fontFamily="@font/playfair_display_bold"
                android:padding="0dp"
                android:layout_marginLeft="20dp"
                android:text="@string/mas"
                android:textSize="28dp"
                app:backgroundTint="@null"/>
        </LinearLayout>

        <Button
            android:id="@+id/bt_añadirProductoDetalles"
            style="@style/botonFondoDorado"
            android:layout_width="125dp"
            android:layout_height="55dp"
            android:layout_margin="2dp"
            android:fontFamily="@font/playfair_display_bold"
            android:padding="0dp"
            android:text="@string/añadir"
            android:textSize="28sp"
            app:backgroundTint="@null"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>
</ScrollView>