<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradado_fondo">


    <TextView
        android:id="@+id/tv_pedidosTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/playfair_display_bold"
        android:gravity="center"
        android:text="@string/pedidos"
        android:textColor="@color/blanco"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_labelID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="92dp"
        android:fontFamily="@font/playfair_display_bold"
        android:gravity="center"
        android:text="@string/id"
        android:textColor="@color/blanco"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_idDetallePedido"
        app:layout_constraintHorizontal_bias="0.438"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_idDetallePedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/playfair_display_bold"
        android:gravity="center"
        android:text="@string/idPedidoEj"
        android:textColor="@color/blanco"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_pedidosTitulo"
        tools:layout_editor_absoluteX="277dp" />

    <TextView
        android:id="@+id/tv_labelEstado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/playfair_display_bold"
        android:gravity="center"
        android:text="@string/estado"
        android:textColor="@color/blanco"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_labelFecha"
        app:layout_constraintEnd_toStartOf="@+id/tv_estadoDetallePedido"
        app:layout_constraintHorizontal_bias="0.613"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_labelID"
        app:layout_constraintVertical_bias="0.452" />

    <TextView
        android:id="@+id/tv_estadoDetallePedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="52dp"
        android:fontFamily="@font/playfair_display_bold"
        android:gravity="center"
        android:text="@string/estadoPedidoEj"
        android:textColor="@color/blanco"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_fechaDetallePedido0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_idDetallePedido"
        app:layout_constraintVertical_bias="0.50" />

    <TextView
        android:id="@+id/tv_labelFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/playfair_display_bold"
        android:gravity="center"
        android:text="@string/fecha"
        android:textColor="@color/blanco"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_labelMonto"
        app:layout_constraintEnd_toStartOf="@+id/tv_fechaDetallePedido0"
        app:layout_constraintHorizontal_bias="0.575"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_fechaDetallePedido0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/playfair_display_bold"
        android:gravity="center"
        android:text="@string/fechaPedidoEj"
        android:textColor="@color/blanco"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_montoDetallePedido"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_labelMonto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/playfair_display_bold"
        android:gravity="center"
        android:text="@string/monto"
        android:textColor="@color/blanco"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_montoDetallePedido"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="315dp" />

    <TextView
        android:id="@+id/tv_montoDetallePedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="52dp"
        android:fontFamily="@font/playfair_display_bold"
        android:gravity="center"
        android:text="@string/precioProducto"
        android:textColor="@color/blanco"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_clienteDetallePedido"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_labelCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/playfair_display_bold"
        android:gravity="center"
        android:text="@string/cliente"
        android:textColor="@color/blanco"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_clienteDetallePedido"
        app:layout_constraintHorizontal_bias="0.418"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_labelMonto" />

    <TextView
        android:id="@+id/tv_clienteDetallePedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/playfair_display_bold"
        android:gravity="center"
        android:text="@string/nombreUsuarioEJ"
        android:textColor="@color/blanco"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_metodoDetallePedido"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_labelMetodoPago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/playfair_display_bold"
        android:gravity="center"
        android:text="@string/metodoPago"
        android:textColor="@color/blanco"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_metodoDetallePedido"
        app:layout_constraintHorizontal_bias="0.222"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="477dp" />

    <TextView
        android:id="@+id/tv_metodoDetallePedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="64dp"
        android:fontFamily="@font/playfair_display_bold"
        android:gravity="center"
        android:text="@string/pse"
        android:textColor="@color/blanco"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="477dp" />


</androidx.constraintlayout.widget.ConstraintLayout>