<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradado_fondo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

    <TextView
        android:id="@+id/tv_pedidosTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pedidos"
        android:textSize="30sp"
        android:gravity="center"
        android:fontFamily="@font/playfair_display_bold"
        android:textColor="@color/blanco"
        android:layout_gravity="center"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_labelID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/playfair_display_bold"
                android:gravity="center"
                android:text="@string/id"
                android:textColor="@color/blanco"
                android:textSize="30sp"
                app:layout_constraintEnd_toStartOf="@+id/tv_idDetallePedido"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/tv_idDetallePedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="100dp"
                android:fontFamily="@font/playfair_display_bold"
                android:gravity="center"
                android:text="@string/idPedidoEj"
                android:textColor="@color/blanco"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/tv_labelEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/playfair_display_bold"
                android:gravity="center"
                android:text="@string/estado"
                android:textColor="@color/blanco"
                android:textSize="30sp"
                app:layout_constraintBottom_toTopOf="@+id/tv_labelFecha"
                app:layout_constraintEnd_toStartOf="@+id/tv_estadoDetallePedido"
                app:layout_constraintHorizontal_bias="0.701"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView18" />

            <TextView
                android:id="@+id/tv_estadoDetallePedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="50dp"
                android:fontFamily="@font/playfair_display_bold"
                android:gravity="center"
                android:text="@string/estadoPedidoEj"
                android:textColor="@color/blanco"
                android:textSize="30sp"
                app:layout_constraintBottom_toTopOf="@+id/tv_fechaDetallePedido0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_idDetallePedido" />

            <TextView
                android:id="@+id/tv_labelFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/playfair_display_bold"
                android:gravity="center"
                android:text="@string/fecha"
                android:textColor="@color/blanco"
                android:textSize="30sp"
                app:layout_constraintBottom_toTopOf="@+id/tv_labelMonto"
                app:layout_constraintEnd_toStartOf="@+id/tv_fechaDetallePedido0"
                app:layout_constraintHorizontal_bias="0.723"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_fechaDetallePedido0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="36dp"
                android:fontFamily="@font/playfair_display_bold"
                android:gravity="center"
                android:text="@string/fechaPedidoEj"
                android:textColor="@color/blanco"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="107dp" />

            <TextView
                android:id="@+id/tv_labelMonto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/playfair_display_bold"
                android:gravity="center"
                android:text="@string/monto"
                android:textColor="@color/blanco"
                android:textSize="30sp"
                app:layout_constraintEnd_toStartOf="@+id/tv_montoDetallePedido"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="150dp" />

            <TextView
                android:id="@+id/tv_montoDetallePedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="44dp"
                android:fontFamily="@font/playfair_display_bold"
                android:gravity="center"
                android:text="@string/precioProducto"
                android:textColor="@color/blanco"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="150dp" />

            <TextView
                android:id="@+id/tv_labelCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/playfair_display_bold"
                android:gravity="center"
                android:text="@string/cliente"
                android:textColor="@color/blanco"
                android:textSize="30sp"
                app:layout_constraintEnd_toStartOf="@+id/tv_clienteDetallePedido"
                app:layout_constraintHorizontal_bias="0.451"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="200dp" />

            <TextView
                android:id="@+id/tv_clienteDetallePedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="64dp"
                android:fontFamily="@font/playfair_display_bold"
                android:gravity="center"
                android:text="@string/nombreUsuarioEJ"
                android:textColor="@color/blanco"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="200dp" />

            <TextView
                android:id="@+id/tv_labelMetodoPago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/playfair_display_bold"
                android:gravity="center"
                android:text="@string/metodoPago"
                android:textColor="@color/blanco"
                android:textSize="30sp"
                app:layout_constraintEnd_toStartOf="@+id/tv_metodoDetallePedido"
                app:layout_constraintHorizontal_bias="0.641"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="250dp" />

            <TextView
                android:id="@+id/tv_metodoDetallePedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="64dp"
                android:fontFamily="@font/playfair_display_bold"
                android:gravity="center"
                android:text="@string/pse"
                android:textColor="@color/blanco"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="250dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


</ScrollView>