<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/negro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15sp">

        <LinearLayout
            style="@style/Edittex"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10sp">

            <!--imagen y titulo-->
            <ImageView
                android:id="@+id/imagenregistrotitle"
                android:layout_width="181dp"
                android:layout_height="100sp"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/textregistrotitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/registrotitleGoogle"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:layout_marginStart="10sp"
                android:textColor="@color/dorado"
                android:fontFamily="@font/playfair_display_bold"/>
        </LinearLayout>

        <!--telefono y editex-->
        <TextView
            android:layout_marginTop="10sp"
            android:id="@+id/texttelfgoogle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/telefonotitle"
            android:textSize="15sp"
            android:layout_marginStart="10sp"
            android:textColor="@color/dorado"
            android:fontFamily="@font/playfair_display_bold"/>

        <EditText
            style="@style/Edittex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:id="@+id/telefonoGoogle"
            android:layout_marginStart="10sp"
            android:autofillHints="@string/hintTelefono"
            android:textColorHint="@color/blanco"
            android:hint="@string/hintTelefono"
            android:textSize="20sp"
            android:textColor="@color/dorado"
            android:layout_marginVertical="15sp"/>

        <Button
            android:id="@+id/button_registro_google"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/registrase_btn"
            android:textColor="@color/dorado"
            app:backgroundTint="@null"/>

    </LinearLayout>

</ScrollView>