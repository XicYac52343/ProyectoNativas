<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/fondo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/perfilTitle"
        android:textSize="30sp"
        android:gravity="center"
        android:fontFamily="@font/playfair_display_bold"
        android:textColor="@color/dorado"
        android:layout_gravity="center"/>

        <ImageView

            android:layout_marginVertical="15dp"
            android:layout_width="match_parent"
            android:layout_height="150sp"
            app:srcCompat="@drawable/user" />
<!--nombres-->

        <TextView
            android:id="@+id/nombreslabel"
            style="@style/Widget.MaterialComponents.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nombretitle"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/playfair_display_bold"
            android:textColor="@color/blanco"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:textStyle="bold"
            android:id="@+id/nombreuser"
            style="@style/Edittex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nombretitle"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:fontFamily="@font/playfair_display_bold"
            android:textColor="@color/blanco"
            android:layout_marginBottom="10dp"/>

        <!--apellidos-->
        <TextView
            android:id="@+id/apellidoslabel"
            style="@style/Widget.MaterialComponents.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apellidotitle"
            android:textSize="20sp"
            android:layout_marginStart="10sp"
            android:fontFamily="@font/playfair_display_bold"
            android:textColor="@color/blanco"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:textStyle="bold"
            android:id="@+id/apellidouser"
            style="@style/Edittex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/apellidotitle"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:fontFamily="@font/playfair_display_bold"
            android:textColor="@color/blanco"
            android:layout_marginBottom="10dp"/>

        <!--correo-->
        <TextView
            android:id="@+id/correolabel"
            style="@style/Widget.MaterialComponents.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/correotitle"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/playfair_display_bold"
            android:textColor="@color/blanco"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/correouser"
            style="@style/Edittex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/correotitle"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:fontFamily="@font/playfair_display_bold"
            android:textColor="@color/blanco"
            android:layout_marginBottom="10dp"/>
        <!--telefono-->

        <TextView
            android:id="@+id/telefonolabel"
            style="@style/Widget.MaterialComponents.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/telefonotitle"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/playfair_display_bold"
            android:textColor="@color/blanco"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/telefonouser"
            style="@style/Edittex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/telefonotitle"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:fontFamily="@font/playfair_display_bold"
            android:textColor="@color/blanco" />

        <Button
            android:id="@+id/btneditarinfo"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btneditinfo"
            app:backgroundTint="@color/negro"
            android:textColor="@color/dorado"
            android:fontFamily="@font/playfair_display_bold"
            />







    </LinearLayout>
</ScrollView>