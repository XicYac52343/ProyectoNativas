<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/negro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_primerProductoGestionPro"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="10dp"
            android:background="@drawable/degradado_producto_gris"
            app:srcCompat="@drawable/fragancia_urbe" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="3dp"
                app:srcCompat="@drawable/estrella" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="3dp"
                app:srcCompat="@drawable/estrella" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="3dp"
                app:srcCompat="@drawable/estrella" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="3dp"
                app:srcCompat="@drawable/estrella" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_nombrePrimerProductoGestionPro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/libre_baskerville_bold"
            android:text="@string/nombreProducto"
            android:textAlignment="center"
            android:textColor="@color/burdeos"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_precioPrimerProductoGestionPro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-11dp"
            android:fontFamily="@font/playfair_display_bold"
            android:text="@string/precioProducto"
            android:textAlignment="center"
            android:textColor="@color/dorado"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_categoriaPrimerProductoGestionPro"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/libre_baskerville_bold"
            android:text="@string/categoriaAromaFresco"
            android:textAlignment="center"
            android:textColor="@color/blanco"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/tv_cantidadPrimerProductoGestionPro"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/libre_baskerville_bold"
            android:text="@string/stockProducto"
            android:textAlignment="center"
            android:textColor="@color/blanco"
            android:textSize="23sp" />

        <Button
            android:id="@+id/bt_editarPrimerGestionPro"
            style="@style/botonFondoDorado"
            android:layout_width="125dp"
            android:layout_height="55dp"
            android:layout_margin="2dp"
            android:fontFamily="@font/playfair_display_bold"
            android:padding="0dp"
            android:text="@string/editar"
            android:textSize="28dp"
            app:backgroundTint="@null" />

    </LinearLayout>
</LinearLayout>