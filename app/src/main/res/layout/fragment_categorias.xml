<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/negro">

    <LinearLayout
        android:id="@+id/linearLayourHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_categoriasTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/playfair_display_bold"
                android:text="@string/categoriaExclusivos"
                android:textColor="@color/blanco"
                android:textSize="30sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_primerProductoCategorias"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/degradado_producto"
                    app:srcCompat="@drawable/fragancia_urbe" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="3dp"
                        app:srcCompat="@drawable/estrella" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="3dp"
                        app:srcCompat="@drawable/estrella" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="3dp"
                        app:srcCompat="@drawable/estrella" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="3dp"
                        app:srcCompat="@drawable/estrella" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_nombrePrimerProductoCategorias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/libre_baskerville_bold"
                    android:text="@string/nombreProducto"
                    android:textAlignment="center"
                    android:textColor="@color/burdeos"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tv_precioPrimerProductoCategorias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-11dp"
                    android:fontFamily="@font/playfair_display_bold"
                    android:text="@string/precioProducto"
                    android:textAlignment="center"
                    android:textColor="@color/dorado"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/bt_agregarPrimerProducto"
                    style="@style/botonFondoDorado"
                    android:layout_width="125dp"
                    android:layout_height="55dp"
                    android:layout_margin="2dp"
                    android:fontFamily="@font/playfair_display_bold"
                    android:padding="0dp"
                    android:text="@string/a単adir"
                    android:textSize="28dp"
                    app:backgroundTint="@null" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_segundoProductoCategorias"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/degradado_producto"
                    app:srcCompat="@drawable/fragancia_urbe" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="3dp"
                        app:srcCompat="@drawable/estrella" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="3dp"
                        app:srcCompat="@drawable/estrella" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="3dp"
                        app:srcCompat="@drawable/estrella" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="3dp"
                        app:srcCompat="@drawable/estrella" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_nombreSegundoProductoCategorias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/libre_baskerville_bold"
                    android:text="@string/nombreProducto"
                    android:textAlignment="center"
                    android:textColor="@color/burdeos"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tv_precioSegundoProductoCategorias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-11dp"
                    android:fontFamily="@font/playfair_display_bold"
                    android:text="@string/precioProducto"
                    android:textAlignment="center"
                    android:textColor="@color/dorado"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/bt_agregarSegundoProducto"
                    style="@style/botonFondoDorado"
                    android:layout_width="125dp"
                    android:layout_height="55dp"
                    android:layout_margin="2dp"
                    android:fontFamily="@font/playfair_display_bold"
                    android:padding="0dp"
                    android:text="@string/a単adir"
                    android:textSize="28dp"
                    app:backgroundTint="@null" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_tercerProductoCategorias"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/degradado_producto"
                    app:srcCompat="@drawable/fragancia_urbe" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="3dp"
                        app:srcCompat="@drawable/estrella" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="3dp"
                        app:srcCompat="@drawable/estrella" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="3dp"
                        app:srcCompat="@drawable/estrella" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="3dp"
                        app:srcCompat="@drawable/estrella" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_nombreTercerProductoCategorias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/libre_baskerville_bold"
                    android:text="@string/nombreProducto"
                    android:textAlignment="center"
                    android:textColor="@color/burdeos"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tv_precioTercerProductoCategorias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-11dp"
                    android:fontFamily="@font/playfair_display_bold"
                    android:text="@string/precioProducto"
                    android:textAlignment="center"
                    android:textColor="@color/dorado"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/bt_agregarTercerProducto"
                    style="@style/botonFondoDorado"
                    android:layout_width="125dp"
                    android:layout_height="55dp"
                    android:layout_margin="2dp"
                    android:fontFamily="@font/playfair_display_bold"
                    android:padding="0dp"
                    android:text="@string/a単adir"
                    android:textSize="28dp"
                    app:backgroundTint="@null" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_cuartoProductoCategorias"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/degradado_producto"
                    app:srcCompat="@drawable/fragancia_urbe" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="3dp"
                        app:srcCompat="@drawable/estrella" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="3dp"
                        app:srcCompat="@drawable/estrella" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="3dp"
                        app:srcCompat="@drawable/estrella" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="3dp"
                        app:srcCompat="@drawable/estrella" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_nombreCuartoProductoCategorias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/libre_baskerville_bold"
                    android:text="@string/nombreProducto"
                    android:textAlignment="center"
                    android:textColor="@color/burdeos"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tv_precioCuartoProductoCategorias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-11dp"
                    android:fontFamily="@font/playfair_display_bold"
                    android:text="@string/precioProducto"
                    android:textAlignment="center"
                    android:textColor="@color/dorado"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/bt_agregarCuartoProducto"
                    style="@style/botonFondoDorado"
                    android:layout_width="125dp"
                    android:layout_height="55dp"
                    android:layout_margin="2dp"
                    android:fontFamily="@font/playfair_display_bold"
                    android:padding="0dp"
                    android:text="@string/a単adir"
                    android:textSize="28dp"
                    app:backgroundTint="@null" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>