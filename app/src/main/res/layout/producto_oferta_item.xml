<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/negro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_primerProductoOfertas"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_margin="10dp"
            android:background="@drawable/degradado_producto_gris"
            app:srcCompat="@drawable/fragancia_promo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="3dp"
                app:srcCompat="@drawable/estrella" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="3dp"
                app:srcCompat="@drawable/estrella" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="3dp"
                app:srcCompat="@drawable/estrella" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="3dp"
                app:srcCompat="@drawable/estrella" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_nombrePrimerProductoOfertas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/libre_baskerville_bold"
            android:text="@string/nombreProducto"
            android:textAlignment="center"
            android:textColor="@color/burdeos"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_precioAntesPrimerProductoOfertas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-11dp"
                android:fontFamily="@font/playfair_display_bold"
                android:text="@string/precioProducto"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/burdeos"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_cantidadDescuentoPrimerProductoOfertas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-11dp"
                android:fontFamily="@font/playfair_display_bold"
                android:text="@string/descuento"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/blanco"
                android:textSize="23sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_precioDespuesPrimerProductoOfertas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-11dp"
            android:fontFamily="@font/playfair_display_bold"
            android:text="@string/precioProducto"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/dorado"
            android:textSize="30sp" />

        <Button
            android:id="@+id/bt_agregarPrimerProductoOfertas"
            style="@style/botonFondoDorado"
            android:layout_width="125dp"
            android:layout_height="55dp"
            android:layout_margin="2dp"
            android:fontFamily="@font/playfair_display_bold"
            android:padding="0dp"
            android:text="@string/aÃ±adir"
            android:textSize="28dp"
            app:backgroundTint="@null" />

    </LinearLayout>
</LinearLayout>