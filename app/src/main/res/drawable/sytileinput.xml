<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado enfocado: borde dorado mÃ¡s grueso -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/blanco" />
            <stroke android:width="2dp" android:color="@color/dorado" />
            <corners android:radius="12dp" />
            <padding android:left="16dp" android:top="12dp" android:right="16dp" android:bottom="12dp" />
        </shape>
    </item>

    <!-- Estado por defecto: borde gris claro -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/blanco" />
            <stroke android:width="1dp" android:color="@color/gris" />
            <corners android:radius="12dp" />
            <padding android:left="16dp" android:top="12dp" android:right="16dp" android:bottom="12dp" />
        </shape>
    </item>

</selector>